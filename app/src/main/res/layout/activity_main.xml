<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <Button
        android:id="@+id/btnTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="14sp"
        android:backgroundTint="#FFF63356"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnKali"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnKali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="14sp"
        android:backgroundTint="#FFF63356"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTambah"
        app:layout_constraintEnd_toStartOf="@+id/btnKurang"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btnKurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:backgroundTint="#FFF63356"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnKali"
        app:layout_constraintEnd_toStartOf="@+id/btnBagi"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btnBagi"
        android:layout_width="wrap_content"
        android:backgroundTint="#FFF63356"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnKurang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />


    <EditText
        android:id="@+id/inputSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input Number Satu"
        android:inputType="number"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnTambah"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/inputDua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input Number Dua"
        android:inputType="number"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnTambah"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=""
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFF63356"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTambah"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/txtCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Calculator"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFF63356"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/txtApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="App"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFF63356"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCalculator"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
